{% extends 'base.html.twig' %}

{% block title %}Accès Refusé
{% endblock %}

{% block content %}
	<div class="container-xxl flex-grow-1 container-p-y">
		<div class="row justify-content-center">
			<div class="col-md-8 col-lg-6">
				<div class="card">
					<div class="card-body text-center py-5">
						<div class="mb-4">
							<i class="bx bx-lock-alt text-danger" style="font-size: 5rem;"></i>
						</div>
						<h2 class="mb-3 text-danger">Accès Refusé</h2>
						<div class="alert alert-warning mb-4">
							<i class="bx bx-error-circle me-2"></i>
							{{ message }}
						</div>
						<p class="text-muted mb-4">
							Vous n'avez pas les permissions nécessaires pour accéder à cette fonctionnalité.
							                        Veuillez contacter un administrateur si vous pensez qu'il s'agit d'une erreur.
						</p>
						<div class="d-flex justify-content-center gap-3">
							<a href="{{ path('app_home') }}" class="btn btn-primary">
								<i class="bx bx-home me-1"></i>
								Retour à l'accueil
							</a>
							<a href="javascript:history.back()" class="btn btn-outline-secondary">
								<i class="bx bx-arrow-back me-1"></i>
								Page précédente
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
